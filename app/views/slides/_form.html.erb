<div class="admin-content">
  <div class="container">
    <div class="row clearfix">
      <div class="col-md-12 column">
        <h1>Add Slide</h1>
        <div class="row clearfix"><br>
          <%= form_for @slide, :url => url, :html => {:class => "form-horizontal col-sm-12 col-sm-offset-1"} do |f| %>
            <div class="form-group">  
              <label class="col-sm-3 control-label">Name</label>
              <div class="col-sm-5">
                <%= f.text_field :index, :class => "col-sm-9 form-control", :placeholder => "Place index here..", :required => "" %>
              </div>
            </div>
            
            <div class="form-group">  
              <label class="col-sm-3 control-label">image</label>
              <div class="col-sm-9">
                <%= image_tag(@slide.image_url, width: "200") if @slide.image? %>
                <%= f.file_field :image %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-3">
                <%= f.submit "Submit", :class => "btn btn-primary" %>&nbsp;
                <%= link_to "Cancel", slides_path %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>