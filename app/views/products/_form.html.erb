<div class="admin-content">
  <div class="container">
    <div class="row clearfix">
      <div class="col-md-12 column">
        <h1>Product</h1>
        <div class="row clearfix"><br>
          <%= form_for @product, :url => url, :html => {:class => "form-horizontal col-sm-12 col-sm-offset-1"} do |f| %>
            <div class="form-group">  
              <label class="col-sm-3 control-label">Name</label>
              <div class="col-sm-5">
                <%= f.text_field :name, :class => "col-sm-9 form-control", :placeholder => "Place name here..", :required => "" %>
              </div>
            </div>

            <div class="form-group">  
              <label class="col-sm-3 control-label">Category</label>
              <div class="col-sm-5">
                <%= f.select :merk_id, options_for_select(@merks.collect{|merk| [merk.name, merk.id]}, @product.merk_id), {}, {:class => "col-sm-9 form-control"} %>
              </div>
            </div>
            
            <div class="form-group">  
              <label class="col-sm-3 control-label">Image</label>
              <div class="col-sm-9">
                <%= image_tag(@product.image_url, width: "200") if @product.image? %>
                <%= f.file_field :image %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-3">
                <%= f.submit "Submit", :class => "btn btn-primary" %>&nbsp;
                <%= link_to "Cancel", products_path %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>