<div class="admin-content">
  <div class="container">
    <div class="row clearfix">
      <div class="col-md-12 column">
        <h1>Add Merk</h1>
        <div class="row clearfix"><br>
          <%= form_for @merk, :url => url, :html => {:class => "form-horizontal col-sm-12 col-sm-offset-1"} do |f| %>
            <div class="form-group">  
              <label class="col-sm-3 control-label">Name</label>
              <div class="col-sm-5">
                <%= f.text_field :name, :class => "col-sm-9 form-control", :placeholder => "Place name here..", :required => "" %>
              </div>
            </div>
            
            <div class="form-group">  
              <label class="col-sm-3 control-label">Background</label>
              <div class="col-sm-9">
                <%= image_tag(@merk.background_url, width: "200") if @merk.background? %>
                <%= f.file_field :background %>
              </div>
            </div>

            <div class="form-group">  
              <label class="col-sm-3 control-label">Group Name</label>
              <div class="col-sm-5">
                <%= f.text_field :group_name, :class => "col-sm-9 form-control", :placeholder => "Place group here..", :required => "" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-3">
                <%= f.submit "Submit", :class => "btn btn-primary" %>&nbsp;
                <%= link_to "Cancel", merks_path %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>